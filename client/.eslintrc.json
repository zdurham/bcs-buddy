{
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"extends": ["eslint:recommended", "plugin:vue/essential"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"parser": "babel-eslint",
		"ecmaVersion": 9,
		"sourceType": "module"
	},
	"plugins": ["vue"],
	"rules": {
		"indent": ["error", 2],
		"linebreak-style": ["error", "unix"],
		"no-console": ["warn", { "allow": ["info", "warn"] }],
		"quotes": ["error", "single"],
		"semi": ["error", "always"]
	}
}
